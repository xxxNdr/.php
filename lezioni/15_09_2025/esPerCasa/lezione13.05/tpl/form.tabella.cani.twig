{% if dati.status != 'nessuna operazione in corso' %}
	<p>{{dati.status}}</p>
{% endif %}

<form
	method="post">
	{# non mi serve specificare l'action perch√© htaccess reindirizza tutto a index.php #}
	<input type="hidden" name="id" value="{{dati.id}}">
	<label>Nome</label>
	<input type="text" name="nome" value="{{dati.nome}}" required>
	<label>Data di nascita</label>
	<input type="date" name="data_nascita" value="{{dati.data_nascita}}" required>
	<button type="submit">Submit</button>
</form>

<h2>Lista Cani</h2>

<table border="1">
	<thead>
		<tr>
			<td>ID</td>
			<td>Nome</td>
			<td>Data di nascita</td>
			<td>Azioni</td>
		</tr>
	</thead>
	<tbody>
		{% for x in lista %}
			<tr>
				<td>{{x.id}}</td>
				<td>{{x.nome}}</td>
				<td>{{x.data_nascita}}</td>
				<td>
					<a href="?x=lista-cani&modifica={{x.id}}">Modifica</a>
					<a href="?x=lista-cani&elimina={{x.id}}" onclick="return confirm('Sicuro vero?')">Elimina</a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
